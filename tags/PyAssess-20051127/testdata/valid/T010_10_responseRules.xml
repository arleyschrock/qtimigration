<?xml version="1.0" encoding="UTF-8"?>
<assessmentItem xmlns="http://www.imsglobal.org/xsd/imsqti_v2p0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.imsglobal.org/xsd/imsqti_v2p0
    http://www.imsglobal.org/xsd/imsqti_v2p0.xsd" identifier="T010.10" title="Test 10.10: Response
    Rules" adaptive="false" timeDependent="false">
    <responseDeclaration identifier="RESPONSE" cardinality="single" baseType="identifier">
        <defaultValue>
            <value>D</value>
        </defaultValue>
        <mapping defaultValue="2">
            <mapEntry mapKey="A" mappedValue="4"/>
            <mapEntry mapKey="B" mappedValue="3"/>
            <mapEntry mapKey="C" mappedValue="2"/>
            <mapEntry mapKey="D" mappedValue="1"/>
        </mapping>
    </responseDeclaration>
    <outcomeDeclaration identifier="SCORE" cardinality="single" baseType="float"/>
    <itemBody>
        <p>In this item the mapResponse operator is used to set the score. A system fails if you do not SCORE 1 for this
            item when providing the default response.</p>
        <choiceInteraction responseIdentifier="RESPONSE" shuffle="false" maxChoices="1">
            <simpleChoice identifier="A">Choice A: worth 4 marks</simpleChoice>
            <simpleChoice identifier="B">Choice B: worth 3 marks</simpleChoice>
            <simpleChoice identifier="C">Choice C: worth 2 marks</simpleChoice>
            <simpleChoice identifier="D">Choice D: worth 1 mark</simpleChoice>
        </choiceInteraction>
    </itemBody>
    <responseProcessing>
        <setOutcomeValue identifier="SCORE">
            <mapResponse identifier="RESPONSE"/>
        </setOutcomeValue>
    </responseProcessing>
</assessmentItem>
